<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.backers.backers.TicketActivity">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toobar"
        android:elevation="4dp"
        app:titleTextColor="@color/md_white_1000"
        app:subtitleTextColor="@color/md_white_1000"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:showDividers="end">

            <com.backers.backers.CustomFontTextView
                android:id="@+id/setting"
                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:textSize="20sp"
                android:text="Support Ticket"
                android:textStyle="bold"
                android:textColor="@color/md_white_1000" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/ticket"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                card_view:cardBackgroundColor="@color/md_white_1000"
                card_view:cardElevation="5dp"
                card_view:cardCornerRadius="0dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent">

                    <com.backers.backers.CustomFontTextView
                        android:id="@+id/title"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/md_black_1000"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="title"/>
                    <com.backers.backers.CustomFontTextView
                        android:id="@+id/product_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:textColor="@color/toobar"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="Product: "/>
                    <com.backers.backers.CustomFontTextView
                        android:id="@+id/date_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_title"
                        android:textColor="@color/toobar"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="Date: "/>
                    <com.backers.backers.CustomFontTextView
                        android:id="@+id/product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:layout_toRightOf="@id/product_title"
                        android:textColor="@color/toobar"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="title"/>
                    <com.backers.backers.CustomFontTextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/product_title"
                        android:layout_toRightOf="@id/date_title"
                        android:textColor="@color/toobar"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="title"/>
                    <com.backers.backers.CustomFontTextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/date_title"
                        android:textColor="@color/toobar"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="description"/>
                    <com.backers.backers.CustomFontTextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/heart"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:text="status"/>
                </RelativeLayout>

            </android.support.v7.widget.CardView>






            <android.support.v7.widget.CardView
                android:id="@+id/dialog"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardBackgroundColor="@color/gray"
                card_view:cardElevation="5dp"
                card_view:cardCornerRadius="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.backers.backers.FitHeightListView
                        android:id="@+id/dialog_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@color/md_white_1000">

                    </com.backers.backers.FitHeightListView>


                    <com.backers.backers.CustomFontTextView
                        android:id="@+id/reply_ticket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dialog_list"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/toobar"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:onClick="reply"
                        android:text="Write for reply"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>
